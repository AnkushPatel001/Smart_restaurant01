<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/historyFoodImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/menu2"
            android:scaleType="centerCrop"
            android:contentDescription="Image of the food item"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/historyFoodName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Burger"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/historyFoodImage"
            app:layout_constraintTop_toTopOf="@id/historyFoodImage"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/historyFoodPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Rs.120"
            android:textColor="@color/red"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/historyFoodImage"
            app:layout_constraintTop_toBottomOf="@id/historyFoodName" />

        <TextView
            android:id="@+id/historyFoodQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty: 2"
            app:layout_constraintTop_toBottomOf="@id/historyFoodPrice"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
